            <label for="school" class="text-light me-4 ms-4 two d-flex justify-content-center align-items-center" style="width: 90px;">Unit</label>
            <div class="text-light bg-light m-0 rounded" style="width: 100%;">
              <select name="unit" id="unit" class="form-control">
                
              </select>
            </div>
          </div>
        </div>

        <!-- <div data-mdb-input-init class="form-outline mb-4 ">
          <div class="d-flex justify-content-center rounded" style="padding: 1px; background: linear-gradient(to left,#ff3131 0%, #004aad 100%);">
