<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#044aab"/>
    <title>Revision Access Point</title>
    <link rel="icon" type="image/x-icon" href="/logo.svg">
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/quiz.css">
    <link rel="manifest" href="/manifest.json">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <!-- Fonts -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> -->
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@100..900&display=swap" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <!-- MDB -->
    <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet"/> -->
    <!-- Ad sense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4066811607299460" crossorigin="anonymous"></script>
  </head>
  <body>

    <!-- Nav bar -->
    <div class="container-fluid d-flex align-items-center justify-content-between" id="nav" style="background: linear-gradient(to left, #ff3131 0%, #004aad 100%);">
        <div class="mb-3 d-flex align-items-center justify-content-center" id="logo" style="margin-top: 10px;">
            <div>
                <h1 class="h1 text-light mb-0" style="font-size: 25px; font-family: 'Big Shoulders Display', cursive; font-weight: bold;">Revision Access</h1>
                <div class="container d-flex flex-row align-items-center justify-content-start m-0 p-0">
                    <h1 class="h1 text-light m-0" style="font-size: 25px; font-family: 'Big Shoulders Display', cursive; font-weight: bold;">Point</h1>
                    <div class="ms-1" style="background-color: white; height: 25px; width: 85px;">
                    </div>
                </div>
            </div>
        </div>
        <div>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar" style="position: relative; display: inline-block;">
              <i class="fa fa-bars text-light" aria-hidden="true" style="font-size: 20px;"></i>
            </button>
        </div>
    </div>

    <!-- Dropdown menu -->
    <div class="container d-flex justify-content-end align-items-center p-0" style="position: absolute; z-index: 1; right: 3px;">
      <div class="m-0 mt-1">
        <div class="container collapse navbar-collapse" id="collapsibleNavbar" style="background: linear-gradient(to left, #ff3131 0%, #004aad 100%);">
          <ul class="navbar-nav">
            <li class="nav-item">
                <a href="<%=backPath%>" class="text-light nav-link" style="font-size: 20px; text-decoration: none;"><i class="fa fa-book text-light me-2" aria-hidden="true"></i> Notes </a>
            </li>   
            <li class="nav-item">
                <a href="/home" class="text-light nav-link" style="font-size: 20px; text-decoration: none;"><i class="fa fa-home text-light me-2" aria-hidden="true"></i> Home </a>
            </li>   
            <li class="nav-item">
              <a href="/" class="text-light nav-link" style="font-size: 20px; text-decoration: none;"><i class="fa fa-sign-out text-light me-2" aria-hidden="true"></i> Sign out</a>
            </li>   
          </ul>
        </div>
      </div>
    </div>

    <!-- Quiz information -->
    <div class="container-fluid mt-2">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="m-0 mb-1" style="text-transform: uppercase;">Data structures . <span class="text-muted">Quiz</span></h4>
            <h4 class="m-0 mb-1 text-success" style="text-transform: uppercase;"><%=questions.length%> qns</h4>
        </div>

        <div style="background: linear-gradient(to left, #ff3131 0%, #004aad 100%); height: 5px;"></div>
    </div>

    <!-- Quiz -->
    <div class="container-fluid mt-3" >
        <form action="/quiz<%=path%>" method="post" class="tab-content" id="pills-tabContent">
            <!-- Page 1 -->
            <div class="pb-4">
                <!-- Question -->
                <% questions.forEach(question => { %>
                    <div class="d-flex justify-content-between bg-light rounded p-3 mt-2">
                        <div class="d-flex flex-column">
                            <h6 class="h5 pe-2 text-muted"><%= question.question %></h6>

                            <% question.choices.forEach(choice => { %>
                                <div class="form-check p-0">
                                    <input type="radio" class="form-check-input" id="<%=choice%>" name="<%=question.question%>" value="<%= choice%>" checked>
                                    <label class="form-check-label text-muted h5" for="<%=choice%>" style="font-weight: 300;"> <%= choice %> </label>
                                </div>
                            <% })%>
                            
                        </div>
                    </div>
                <% })%>
            </div>
                
            <button type="submit" class="btn ps-3 pe-3 rounded bg-success text-light" style="padding-top: 5.5px; padding-bottom: 5.5px; text-align: center; width: 100%;">
                Finish
            </button>
        </form>
    </div>

   


    

    <!-- MDB -->
    <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.umd.min.js"></script> -->
    <script src="/home.js"></script>
    
    <script src="https://kit.fontawesome.com/69a11c0c5f.js" crossorigin="anonymous"></script>

    <!-- <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        if('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/service-worker.js').then(function(registration){
                console.log('Service Worker registered');
            }).catch(function(error){
                console.log('Service Worker registration failed:', error);
            })
        }
    </script>
  </body>
</html>