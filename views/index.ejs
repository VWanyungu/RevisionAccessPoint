    <!-- If the message is in the route query -->
    <% if (message) { %>
        <script>
            function display(){
                let display = "<%= message %>"
                swal(display);
            }

            // To ensure the alert is displayed only once
            // Once the browser is closed
            if (!sessionStorage.getItem('firstLoadDone')) {
                window.onload = display()
                sessionStorage.setItem('firstLoadDone', 'true');
            }

            // Clearing the session storage when the redirect happens
            let loginForm = document.getElementById("loginForm")
            let signUpLink = document.getElementById("signUpLink")

            loginForm.onsubmit = function(){
                if (sessionStorage.getItem('firstLoadDone')) {
                    sessionStorage.removeItem('firstLoadDone');
                }
            }

            signUpLink.onclick = function(){
                if (sessionStorage.getItem('firstLoadDone')) {
                    sessionStorage.removeItem('firstLoadDone');
                }
            }

            
            </script>
    <% } %>

