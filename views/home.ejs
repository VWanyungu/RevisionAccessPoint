            <label for="school" class="text-light me-4 ms-4 two d-flex justify-content-center align-items-center" style="width: 90px;">School</label>
            <div class="text-light bg-light m-0 rounded" style="width: 100%;">
              <select name="school" id="school" class="form-control">
                
              </select>
              <!-- <label class="form-label bg-light text-dark p-0 ps-2 pe-2 mt-2" for="school" style="font-size: 20px;">School</label> -->
            </div>
          </div>
        </div>

        <div data-mdb-input-init class="form-outline mb-4 ">
          <div class=" d-flex justify-content-center rounded" style="padding: 1px; background: linear-gradient(to left,#ff3131 0%, #004aad 100%);">
            <label for="school" class="text-light me-4 ms-4 two d-flex justify-content-center align-items-center" style="width: 90px;">Department</label>
            <div class="text-light bg-light m-0 rounded" style="width: 100%;">
              <select name="department" id="department" class="form-control">
               
              </select>
            </div>
          </div>
        </div>

        <div data-mdb-input-init class="form-outline mb-4 ">
          <div class=" d-flex justify-content-center rounded" style="padding: 1px; background: linear-gradient(to left,#ff3131 0%, #004aad 100%);">
            <label for="school" class="text-light me-4 ms-4 two d-flex justify-content-center align-items-center" style="width: 90px;">Year</label>
            <div class="text-light bg-light m-0 rounded" style="width: 100%;">
              <select name="year" id="year" class="form-control">
                <option value="Year_1.1">1.1</option>
                <option value="Year_1.2">1.2</option>
                <!-- <option value="Year_1.2">1.3</option> -->
                <option value="Year_2.1">2.1</option>
                <option value="Year_2.2">2.2</option>
                <option value="Year_2.3">2.3</option>
                <option value="Year_3.1">3.1</option>
              </select>
            </div>
          </div>
        </div>

        <!-- <div data-mdb-input-init class="form-outline mb-4 ">
          <div class=" d-flex justify-content-center rounded" style="padding: 1px; background: linear-gradient(to left,#ff3131 0%, #004aad 100%);">
            <label for="school" class="text-light me-4 ms-4 two d-flex justify-content-center align-items-center" style="width: 90px;">Year</label>
            <div class="text-light bg-light m-0 rounded" style="width: 100%;">
